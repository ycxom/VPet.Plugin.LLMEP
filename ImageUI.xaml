<UserControl x:Class="VPet.Plugin.Image.ImageUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Margin="10">
    <!-- Telegram 风格的聊天气泡 -->
    <Border Background="White"
            CornerRadius="12"
            Padding="8"
            MaxWidth="200"
            MaxHeight="200">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.2" 
                            BlurRadius="10" 
                            ShadowDepth="2" 
                            Direction="270"/>
        </Border.Effect>
        
        <Image x:Name="Image" 
               Stretch="Uniform" />
    </Border>
</UserControl>